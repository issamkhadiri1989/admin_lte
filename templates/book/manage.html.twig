{% extends 'base.html.twig' %}
{% form_theme form 'form/book.fields.html.twig' %}
{% import 'macros/header.html.twig' as header %}
{% block body %}
    {{ header.render_header('Manage e-catalog') }}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ is_editing is same as(true) ? 'Edit book' : 'Add book'}}</h3>
                    <div class="card-tools">
                        <button class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.ean) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.synopsis) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.pages) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.author) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}